{
  "name": "pretty-home",
  "displayName": "Pretty Home",
  "description": "Pretty Home is a VS Code extension designed to enhance the appearance of your recent projects view, making it more organized and visually appealing",
  "version": "1.2.10",
  "license": "MIT",
  "icon": "icon.png",
  "publisher": "sefatanam",
  "author": {
    "name": "Sefat Anam",
    "email": "sefatanam@gmail.com",
    "url": "https://github.com/sefatanam"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.prettyHome",
        "title": "Recent Projects âœ¨",
        "category": "Pretty Home"
      },
      {
        "command": "extension.prettyHomeSettings",
        "title": "Settings",
        "category": "Pretty Home"
      },
      {
        "command": "extension.prettyHomeGiveStar",
        "title": "Give star ðŸŒŸ in Github to support",
        "category": "Pretty Home"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pretty Home Settings",
      "properties": {
        "prettyHome.showOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Show Pretty Home on startup when no folder or workspace is loaded."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "production": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build":"vsce package",
    "act":"act release -e .github/event.json -s VSCE_PAT=MY_FAKE_TOKEN"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "vscode",
    "pretty-home",
    "sefatanam",
    "extension",
    "vs-code-extension",
    "typescript",
    "webview"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sefatanam/vscode-pretty-home"
  },
  "homepage": "https://github.com/sefatanam/vscode-pretty-home",
  "bugs": {
    "url": "https://github.com/sefatanam/vscode-pretty-home/issues"
  }
}
